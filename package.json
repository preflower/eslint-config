{
  "name": "@preflower/eslint-monorepo",
  "version": "0.0.1",
  "description": "A eslint plugin base on standard",
  "license": "MIT",
  "author": "Ted Lin <preflower.lin@gmail.com> (https://github.com/preflower)",
  "main": "index.js",
  "private": "true",
  "scripts": {
    "preinstall": "npx only-allow pnpm",
    "prepare": "husky install",
    "lint": "npx eslint --ext .js,.json,.vue --fix .",
    "ci:version": "pnpm changeset version && pnpm install --lockfile-only",
    "ci:publish": "pnpm changeset publish"
  },
  "lint-staged": {
    "*.{js,json,vue}": [
      "eslint --fix"
    ]
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  },
  "devDependencies": {
    "@changesets/cli": "^2.24.4",
    "@commitlint/cli": "^17.1.2",
    "@commitlint/config-conventional": "^17.1.0",
    "@preflower/eslint-config": "workspace:*",
    "husky": "^8.0.1",
    "lint-staged": "^12.5.0"
  }
}
